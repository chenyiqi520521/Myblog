                android:layout_height="match_parent">

    <zhexian.learn.cnblogs.ui.image.ZoomImageView
        android:id="@+id/imagePreview_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ProgressBar
